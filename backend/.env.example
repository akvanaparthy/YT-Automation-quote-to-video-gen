PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000
FFMPEG_PATH=

# Google Drive Sync Configuration
# Set these to enable automatic sync with Google Drive
# Get folder IDs from your Google Drive share links

# OPTIONAL: Google Drive API Key (recommended for better performance)
# Get from: https://console.cloud.google.com/apis/credentials
# GOOGLE_DRIVE_API_KEY=your_api_key_here

# Videos folder share link or folder ID
# Example: https://drive.google.com/drive/folders/1ABC123XYZ
DRIVE_VIDEOS_FOLDER=

# Music folder share link or folder ID  
# Example: https://drive.google.com/drive/folders/1DEF456UVW
DRIVE_MUSIC_FOLDER=

# Auto-sync on server startup (true/false)
AUTO_SYNC_ON_START=true
